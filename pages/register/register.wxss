/*  */
.section {
  position: relative;
}

.result {
  background: #fff;
  border: 1px solid lightgray;
  position: absolute;
  top: 100rpx;
  width: 100%;
  height: 450rpx;
  z-index: 999;
  display: none;
}

.result.is-active {
  display: block;
}

.result-row {
  width: 100%;
  line-height: 70rpx; 
  padding: 10rpx 10rpx;
  border-bottom: 1px solid lightgray;
}

.second-row {
  justify-content: flex-end;
}

.third-row {
  margin-left: 20%;
  margin-top: 20rpx;
}

